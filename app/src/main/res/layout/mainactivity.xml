<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tomcat_base"
    tools:ignore="ExtraText">

    //메인 화면(계기판 화면)에 이동할 버튼들 만들기

    //조준점 화면, 앞으로의 비전 액티비티로 이동
    <ImageButton
        android:id="@+id/btn_to_vision"
        android:layout_width="132dp"
        android:layout_height="185dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tomcat_icon_vision" />

    //튠 계기판, 지금까지의 약력이 담긴 액티비티로 이동
    <ImageButton
        android:id="@+id/btn_to_history"
        android:layout_width="129dp"
        android:layout_height="145dp"
        android:layout_below="@+id/btn_to_vision"
        android:layout_marginLeft="140dp"
        android:background="@drawable/tomcat_icon_history" />

    //고도, 위도 계기판 > 취미 01(영화 및 뮤지컬 페이지로 이동)
    <ImageButton
        android:id="@+id/btn_to_hobby01"
        android:layout_width="120dp"
        android:layout_height="159dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/tomcat_icon_hobby01" />

    //조이스틱 > id 카드로 이동
    <ImageButton
        android:id="@+id/btn_to_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="444dp"
        android:background="@drawable/tomcat_joystick"
        android:layout_toRightOf="@+id/btn_to_hobby01"
        />

    //기체상태 모니터링 계기판 > 취미 02(음악) 액티비티로 이동
    <ImageButton
        android:id="@+id/btn_to_hobby02"
        android:layout_width="133dp"
        android:layout_height="168dp"
        android:layout_marginTop="350dp"
        android:layout_toRightOf="@+id/btn_to_id"
        android:layout_marginLeft="10dp"
        android:background="@drawable/tomcat_icon_hobby02" />



</RelativeLayout>